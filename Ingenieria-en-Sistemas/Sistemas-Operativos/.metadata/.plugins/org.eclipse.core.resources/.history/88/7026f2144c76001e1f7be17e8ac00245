package BlancanievesSieteEnanitos;

public class Enanito extends Thread{
	private boolean comio;
	Casa c1;
	
	public Enanito(boolean comiendo,Casa c1) {
		this.comio = comiendo;
		this.c1 = c1;
	}
	
	@Override
	public void run() {
		try {
			System.out.println("El enanito " + Thread.currentThread().getId() + " esta trabajando");
			Thread.sleep(1000);
		} catch (Exception e) {
			return;
		}
		while(c1.ocuparSilla(this) == false && !comio)
			try {
				this.wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		System.out.println("El enanito " + Thread.currentThread().getId() + " esta comiendo");
		c1.terminoComer(this);		
	}
}
