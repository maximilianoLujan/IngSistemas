package EjercicioBlancaNieves;

public class Enanito extends Thread {
	Casa c1;
	
	
	public Enanito(Casa c1) {
		this.c1 = c1;
	}
	
	
	@Override
	public void run() {
		System.out.println("El enanito " + Thread.currentThread().getId() + " esta trabajando");
		try {
			Thread.sleep(1000);
			while(!c1.ocuparSilla()) {
				System.out.println("El enanito " + Thread.currentThread().getId() + " llego pero sillas ocupadas = " + c1.getSillasOcupadas());
				wait();
			}
			System.out.println("El enanito " + Thread.currentThread().getId() + " esta sentado esperando por cenicienta");
			c1.ocuparSilla();
		} catch (InterruptedException e) {
		}
	}
}
