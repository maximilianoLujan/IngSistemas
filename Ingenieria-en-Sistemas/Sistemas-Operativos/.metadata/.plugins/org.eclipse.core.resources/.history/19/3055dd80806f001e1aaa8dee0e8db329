package LaPiedraOscilante;

public class Visitante extends Thread {
	Parque p;
	boolean deambulando = true;
	
	public Visitante(Parque p) {
		this.p = p;
	}
	
	@Override
	public void run() {
		System.out.println("El pasajero " + Thread.currentThread().getName() +" esta deambulando");
		try {
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		if(deambulando) {
			Coche c1 = p.hayCochesLibres();
			if (c1 == null) {
				System.out.println("El visitante espera en la cola porque no hay coches libres");
			} else {
				deambulando = false;
			}
		} else {
			try {
				this.wait();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	
}
