package BlancanievesSieteEnanitos;

public class Enanito extends Thread{
	private boolean comiendo;
	Casa c1;
	
	public Enanito(boolean comiendo,Casa c1) {
		this.comiendo = comiendo;
		this.c1 = c1;
	}
	
	@Override
	public void run() {
		int ocupo = c1.ocuparSilla();
		if(ocupo == -1) {
			System.out.println("El enanito " + Thread.currentThread().getId() + " no pudo ocupar la silla");
		} else {
			System.out.println("El enanito " + Thread.currentThread().getId() + " se sento en la silla " + ocupo);
		}
	}
}
